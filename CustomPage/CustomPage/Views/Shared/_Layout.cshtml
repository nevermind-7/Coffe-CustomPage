@using CustomPage.App_LocalResources

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="../../Style/css/main.css" rel="stylesheet"/>
    <script src="../../Assets/js/jQuery3.1.1/jquery-3.1.1.min.js"></script>
    <script src="../../Assets/js/slick/slick.min.js"></script>
    <script src="../../Scripts/jquery.validate.js"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="../../Assets/js/slick/slick.css" rel="stylesheet"/>
    <link href="../../Assets/js/slick/slick-theme.css" rel="stylesheet"/>
    <script src="../../Scripts/jquery-ajax-unobtrusive.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coffee - Custom Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav main-nav">
                    <li>@Html.ActionLink(GlobalRes.nav_Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(GlobalRes.nav_AboutUs, "About", "Home")</li>
                    <li style="float: right;"><a href="/en">@GlobalRes.lang_eng</a></li>
                    <li style="float: right;"><a href="/es">@GlobalRes.lang_es</a></li>
                    <li style="float: right;"><img src="../../Images/app/icons8-geography-filled-30.png" style="margin-top: 10px;"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="main-container">
        @RenderBody()
        <hr />
        <footer>
                <span>&copy; @DateTime.Now.Year - Coffee Custom Page</span>
       </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
