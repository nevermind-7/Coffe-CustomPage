<div class="content">
    <div class="about-container">
        <div class="row button-container">
            <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3 text-center">
                @Ajax.ActionLink(GlobalRes.about_who_we_are, "HowWeAre", "AboutUs", new AjaxOptions { UpdateTargetId = "content-loader" })
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3 text-center">
                @Ajax.ActionLink(GlobalRes.about_specializations, "Specializations", "AboutUs", new AjaxOptions { UpdateTargetId = "content-loader" })
