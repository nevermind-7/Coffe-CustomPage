            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3 text-center">
                @Ajax.ActionLink(GlobalRes.about_contact_us, "ContactUs", "AboutUs", new AjaxOptions { UpdateTargetId = "content-loader" })
